// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id          Int      @id @default(autoincrement())
  exeternalid String   @unique
  createdAt   DateTime @default(now())
  attributes  Json
  updatedAt   DateTime @updatedAt
}

model Client {
  id          Int    @id @default(autoincrement())
  exeternalid String @unique
  email       String
  bairro      String
  rua         String
  complemento String
  numero      String
  cidade      String
  cep         String
  instagram   String
  itens       String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
